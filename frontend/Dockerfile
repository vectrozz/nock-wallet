FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run Vite dev server without opening browser
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]